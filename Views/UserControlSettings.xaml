<UserControl x:Class="WpfTrueSquashScoringC.Views.UserControlSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTrueSquashScoringC.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="200"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical" Margin="0,0,0,20">
            <TextBlock Text="Some settings" HorizontalAlignment="Center" Margin="0,0,0,5" FontFamily="Segoe UI Light"/>
            <TextBox  MinWidth="200" MinHeight="30" FontSize="25" Text="Nastavenie" TextAlignment="Center"/>
            <CheckBox Content="Povoliť" ></CheckBox>
        </StackPanel>

    </Grid></UserControl>
