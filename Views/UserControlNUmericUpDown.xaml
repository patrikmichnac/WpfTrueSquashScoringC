<UserControl x:Class="WpfTrueSquashScoringC.Views.UserControlNUmericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfTrueSquashScoringC.Views"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="170">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" MinWidth="170">
            <Button x:Name="btnNumMinus" MinWidth="50" MinHeight="50" Content="-"/>
            <TextBox x:Name="txtNumValue" Text="{Binding value}" MinWidth="50" MinHeight="50" BorderThickness="1" BorderBrush="#FFD5D5D5" FontSize="30" VerticalContentAlignment="Center"  TextAlignment="Center" Margin="10,0,10,0" VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FFB4B3B3" Foreground="White"/>
            <Button x:Name="btnNumPlus" MinWidth="50" MinHeight="50" Content="+"/>
        </StackPanel>
    </Grid>
</UserControl>
